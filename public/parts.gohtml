<!doctype html>
<html lang="en">

<head>
    {{ template "header.gohtml" }}
    <title>Parts</title>
    <meta name="description" content="">

    <link rel="stylesheet" type="text/css" href="/npm/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/npm/datatables.net-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="/npm/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="/npm/@fortawesome/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="/css/theme.css">

    <script type="text/javascript" src="/npm/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/npm/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="/npm/datatables.net/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/npm/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript" src="/npm/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>
    <script type="text/javascript" src="/npm/@fortawesome/fontawesome-free/js/fontawesome.min.js"></script>
    <script type="text/javascript" src="/js/parts.js"></script>
</head>

<body>
{{ template "navbar.gohtml" }}

{{ $active := "" }}
{{ $want := form_value "project" }}
{{ $projects := projects.Current }}
{{ $parts := parts.Current }}
{{ if $projects.Exists $want }}
    {{ $active = $want }}
{{ else if gt $projects.Len 0 }}
    {{ $active = index $projects 0 }}
    {{ $active = $active.Name }}
{{ end }}

<main role="main">
    <div class="container">
        <h3 class="mt-2">Current Projects</h3>
        <ul class="nav nav-pills" id="project-tabs" role="tablist">
            {{- range $projects }}
                <li class="nav-item">
                    <a class="btn btn-outline-dark {{ if .Released }}text-light{{ else }}text-warning{{ end }} rounded-0 {{ if eq .Name $active }}active{{ end }}"
                       id="{{ .Name }}-tab" data-toggle="pill" href="#parts-{{ .Name }}" role="tab"
                       aria-controls="parts-{{ .Name }}" aria-selected="{{ $active }}">{{ .Title }}</a>
                </li>
            {{ end }}
        </ul>

        <div class="tab-content">
            {{- range $projects }}
                <div class="tab-pane fade {{ if eq .Name $active }}active show{{ end }}"
                     id="parts-{{ .Name }}" role="tabpanel" aria-labelledby="{{ .Name }}-tab">
                    <div class="row row-cols-1">
                        <div class="col mt-3 text-center">
                            {{ if not .Released }}
                                <div class="alert alert-warning">This project is unreleased and invisible to members!
                                </div>{{ end }}
                            {{ if .BannerLink }}
                                <a href="/parts?project={{ .Name }}">
                                    <img src="{{ .BannerLink }}" class="img-fluid mx-auto" alt="Banner">
                                </a>
                            {{ else }}
                                <h2 class="title">
                                    {{ .Title }}
                                    <small><a href="/parts?project={{ .Name }}" class="text-muted"><i class="fas fa-link"></i></a></small>
                                </h2>
                                <h3>{{ .Sources }}</h3>
                            {{ end }}
                        </div>
                        <div class="col text-center">
                            Composed by {{ .Composers }}<br/>
                            <small>{{ .Arrangers }}</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h4 class="text-center m-3"><strong>Submission Deadline:</strong>
                                <em>{{ .SubmissionDeadline }} (Hawaii Time)</em></h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm text-center">
                            <a class="btn btn-lnk btn-outline-light text-info" href="https://discord.gg/9RVUJMQ">
                                <i class="fab fa-discord"></i>
                                Member Discord
                            </a>
                        </div>
                        <div class="col-sm text-center">
                            <a class="btn btn-lnk btn-outline-light text-info"
                               href="https://www.youtube.com/watch?v=VgqtZ30bMgM">
                                <i class="fab fa-youtube"></i>
                                Recording Instructions
                            </a>
                        </div>
                        <div class="col-sm text-center">
                            <a class="btn btn-lnk btn-outline-light text-info"
                               href="{{ .SubmissionLink }}">
                                <i class="fab fa-dropbox"></i>
                                Submit Recordings
                            </a>
                        </div>
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col-md-auto mt-4">
                            <table id="table-{{ .Name }}" style="width: 100%" class="table table-responsive text-light">
                                <thead>
                                <tr>
                                    <th>Score Order</th>
                                    <th>Part</th>
                                    <th>Downloads</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{- range $parts.ForProject .Name }}
                                    <tr>
                                        <td>{{.ScoreOrder}}</td>
                                        <td class="title">{{ title .PartName}}</td>
                                        <td>
                                            {{ if .SheetMusicFile }}
                                                <a href="{{ download_link .SheetMusicFile }}"
                                                   class="btn btn-sm btn-link btn-outline-light bg-dark text-light">
                                                    <i class="far fa-file-pdf"></i> sheet music
                                                </a>
                                            {{ end }}
                                            {{ if .ClickTrackFile }}
                                                <a href="{{ download_link .ClickTrackFile }}"
                                                   class="btn btn-sm btn-link btn-outline-light bg-dark text-light">
                                                    <i class="far fa-file-audio"></i> click track
                                                </a>
                                            {{ end }}
                                            {{ if .ReferenceTrack }}
                                                <a href="{{ download_link .ReferenceTrack}}"
                                                   class="btn btn-sm btn-link btn-outline-light bg-dark text-light">
                                                    <i class="far fa-file-audio"></i> reference track
                                                </a>
                                            {{ end }}
                                            {{ if .ConductorVideo }}
                                                <a href="{{.ConductorVideo}}"
                                                   class="btn btn-sm btn-link btn-outline-light bg-dark text-light">
                                                    <i class="far fa-file-video"></i> conductor video
                                                </a>
                                            {{ end }}
                                            {{ if .PronunciationGuide }}
                                                <a href="{{ download_link .PronunciationGuide}}"
                                                   class="btn btn-sm btn-link btn-outline-light bg-dark text-light">
                                                    <i class="fas fa-language"></i> pronunciation guide
                                                </a>
                                            {{ end }}
                                        </td>
                                    </tr>
                                {{- end }}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            {{- end }}
        </div>
    </div>
</main>
{{ template "footer.gohtml" }}
</body>
</html>
